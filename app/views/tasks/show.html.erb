<h1><%= @task.title %></h1>
<ul>
  <li><%= @task.details %></li>
 </ul>

<p><%= link_to 'Edit the task', edit_task_path(@task) %></p>

<p><%= link_to 'Back to list', tasks_path(@task) %></p>

<%= link_to 'Delete Task',
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
